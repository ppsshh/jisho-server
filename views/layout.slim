doctype html
html
  head
    meta charset="utf-8"
    title = (@title ? "#{@title} · " : '') + "Wakame"
    script src="/build/main.js"
    link rel="stylesheet" type="text/css" href="/main.css"
    meta content="width=device-width, initial-scale=1" name="viewport"
  body.myfont_jp2 class="#{current_user.try(:settings).try(:[], 'theme') == 'black' ? 'black' : ''}"
    div#main-menu
      div.center
        div.main-menu-item
          - if current_user.present?
            a href=path_to(:logout) data-method="delete" data-confirm="Logout?" style="text-decoration: none; color: red" title=current_user.login ●
            br
            div.main-menu-item-details = current_user.login
          - else
            a href=path_to(:login) ●
        div.main-menu-item
          a> href=path_to(:index) style="font-weight: bold; text-decoration: none" 【ワ亀】
        div.main-menu-item
          - level = current_user.present? ? current_user.current_level : (@view_user.present? ? @view_user.current_level : 1)
          a href=path_to(:list_level).with(level) = "Level #{level}"
          //br
          //div.main-menu-item-details = "#{((Time.now - (level_started_at(level) || DateTime.now)) / (60*60*24)).round(1)} days"
        - if current_user.present?
          a style="padding-left: 0.7em" href=path_to(:notes) 📘
          label.editing-checkbox
            input type="checkbox"
            span
      div.right
        form.search-form method="GET" action=path_to(:search)
          label
            input type="checkbox" name="japanese" checked="on"
            span.slider
          input.search type="text" name="query" placeholder="Search..." tabindex=1 autocomplete="off"
          //input type="submit" value="Search"
    == slim :flashes
    div#container
      == yield
