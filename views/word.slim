  seq = params[:id] || @word_seq
  json = Collector.new(current_user, words: Word.where(seq: seq)).to_json

div#word-card-app
  vue-word :seq=seq :j="j" :editing="editing"

div style="text-align: center"
  img src="/img/end-pattern.png" style="opacity: .5; width: 8em;"

javascript:
  var app = new Vue({
    el: '#word-card-app',
    data: {
      j: #{{json}},
      editing: #{{options('editing')}}
    }
  })
